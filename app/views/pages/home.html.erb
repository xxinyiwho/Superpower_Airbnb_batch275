</div>

<div class="container">
  <div class="banner-content">
    <h3>Book your superpower and be magical today!</h3>
    <%= simple_form_for :search, url: superpowers_path, method: :get do |f| %>
    <%= f.input :keyword, label: "What superpower you are looking for?" %>
    <%= f.input :start_date, as: :date %>
    <%= f.input :end_date, as: :date %>
    <%= f.submit "see all power", class: "btn btn-outline-primary" %>
    <%= f.submit "search", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
</div>


