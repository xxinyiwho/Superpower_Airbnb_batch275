<div class="banner">
  <div class="navbar sticky-top">
    <div class="logo">
     <%= link_to root_path do %>
     <img src="https://static.thenounproject.com/png/2729312-200.png" alt="">
     <% end %>
   </div>

   <ul>
    <li><%= link_to "Create new", new_superpower_path %></li>
