<div id="flexible-form">
  <div class="coloured-side">
    <h3>                         </h3>
  </div>
  <div class="container-new">
  <div class="signup" style="margin-top: 30px;">
    <%= simple_form_for(@superpower) do |f| %>
    <%= f.input :name, label: "Superpower" %>
    <%= f.input :description %>
    <%= f.input :price, label: "Price per day" %>

    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "create power", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>

