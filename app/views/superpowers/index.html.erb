<div class="container-index">
  <div class="cards">
    <% @superpowers.each do |superpower| %>
    <div class="card-product">

      <div class="powerimg">
        <% if superpower.photo.url %>
        <%= link_to superpower_path(superpower) do %>
        <%= cl_image_tag superpower.photo %>
        <% end %>
        <% end %>

      </div>


      <%#= cl_image_tag @superpower.photo, height: 300, width: 400, crop: :fill %>
      <div class="card-product-infos">
        <div class="name-price">
          <h3><%= link_to superpower.name, superpower_path(superpower) %></h3>
          <p><%= superpower.price %>â‚¬/day</p>
        </div>
        <%= superpower.description %>
      </div>

    </div>
    <% end %>
  </div>
</div>



