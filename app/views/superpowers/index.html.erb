<div class="banner">
  <div class="navbar sticky-top">
    <%= link_to "Home", root_path, class: "btn btn-light" %>
    <%= link_to "Post your superpower", new_superpower_path, class: "btn btn-primary" %>
  </div>

  <div class="container">
    <div class="banner-content">

    </div>
  </div>
</div>

  <!-- card -->
  <div class="container">
    <div class="cards">
      <% @superpowers.each do |superpower| %>
      <div class="card-product">
        <% if superpower.photo.url %>
        <%= cl_image_tag superpower.photo %>
        <% end %>
        <%#= cl_image_tag @superpower.photo, height: 300, width: 400, crop: :fill %>
        <div class="card-product-infos">
          <%= link_to superpower.name, superpower_path(superpower) %>
          <br>
          <%= superpower.description %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


<%#= link_to "Create a new superpower", new_superpower_path, class: "btn btn-primary" %>


